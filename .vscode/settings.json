{
  // Use Prettier for formatting all supported filetypes:
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // (Optional) Format on save:
  "editor.formatOnSave": true,
  // Ensure Prettier is the default just for JS/JSX/TSX:
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
